extends layout

block content
    h1 #{title}: #{bookinstance.id}

    if bookinstance.status === 'Loaned'

        p #[strong This book copy needs to be returned before attempting to delete this bookinstance.]

        div(style='margin-left:20px;margin-top:20px')

            h4 Book status

            dd #{bookinstance.status}


    else
        p Do you really want to delete this Book Instance?

        form(method='POST' action='')
            div.form-group
                input#bookisntanceid.form-control(type='hidden',name='bookinstanceid', required='true', value=bookinstance._id )

            button.btn.btn-primary(type='submit') Delete